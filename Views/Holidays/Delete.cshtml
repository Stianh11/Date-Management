@model Date_Management_Project.Models.Holiday

<h2>Delete Holiday</h2>
<p>Are you sure you want to delete this?</p>
<dl class="row">
	<dt class="col-sm-2">Start</dt>
	<dd class="col-sm-10">@Model.StartDate.ToString("yyyy-MM-dd")</dd>
	<dt class="col-sm-2">End</dt>
	<dd class="col-sm-10">@Model.EndDate.ToString("yyyy-MM-dd")</dd>
	<dt class="col-sm-2">Name</dt>
	<dd class="col-sm-10">@Model.Name</dd>
	<dt class="col-sm-2">Country</dt>
	<dd class="col-sm-10">@Model.CountryCode</dd>
</dl>
<form asp-action="Delete" method="post">
	<input type="hidden" asp-for="Id" />
	<button type="submit" class="btn btn-danger">Delete</button>
	<a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
